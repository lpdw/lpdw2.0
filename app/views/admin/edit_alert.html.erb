<h2>Modifier alerte</h2>
<%= form_for(:thisAlert, url:  admin_edit_alert_path, html: {class: "form" } ) do |f| %>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.text_field :name, autofocus: true , :class => 'input' ,:placeholder=>"Nom" %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.text_area :content, autocomplete: "off", :class => 'input textarea' ,:placeholder=>"Contenu" %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.collection_select :level, Alert::LEVELS, :to_s, :humanize %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.check_box (:active) %></br>
        <%= f.label(:active) %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <%= f.submit "Mise Ã  jour", :class => 'input-btn' %>
    </div>
</div>
<% end%>